{{#if message}}
  <div class="alert alert-success m-3 alert-dismissible fade show" role="alert">
    {{message}}
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/if}}

<div class="card text-bg-primary m-3">
  <div class="card-header" >
    <h1> Perfil del usuario </h1>
  </div>
  <div class="card-body" >

  <ul>
    <li>{{ user.first_name }} {{ user.last_name }} </li>
    <li> {{ user.age }} </li>
    <li>{{ user.email }} </li>
  </ul>
  </div>

  <div class="m-3">
    <a href="/session/logout" class="btn btn-danger"><i class="bi bi-box-arrow-right"></i></a>
    <a href="/api/products" class="btn btn-success"><i class="bi bi-box-seam"></i></a>
    <a href="/session/github" class="btn btn-success"> <i class="bi bi-github"></i> </a>
  </div>
</div>